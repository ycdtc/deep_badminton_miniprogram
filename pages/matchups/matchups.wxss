.container {
    padding: 20rpx;
    background-color: #f8f8f8;
    min-height: 100vh;
    padding-bottom: 120rpx;  /* 为底部按钮留出空间 */
}

.header {
    background-color: #0088ff;
    padding: 20rpx;
    text-align: center;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
}

.title {
    color: white;
    font-size: 36rpx;
    font-weight: bold;
}

.round-title {
    background-color: #ffd700;
    color: #333;
    padding: 20rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
    border-radius: 12rpx;
    margin: 20rpx 0;
}

.round-matches {
    margin-bottom: 30rpx;
}

.match-item {
    background: white;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.match-number {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 10rpx;
}

.team-powers {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10rpx;
}

.power-text {
    font-size: 24rpx;
    color: #666;
    background-color: #f5f5f5;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
}

.score-display {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20rpx;
}

.team-1, .team-2 {
    flex: 1;
}

.player-pair {
    display: flex;
    justify-content: center;
    gap: 20rpx;
}

.player {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8rpx;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background: #eee;
}

.name {
    font-size: 24rpx;
    color: #333;
}

.score {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
    min-width: 120rpx;
    text-align: center;
}

.buttons {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    gap: 20rpx;
    padding: 20rpx;
    background: white;
    box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.primary-btn {
    flex: 1;
    background: #1aad19;
    color: white;
    border: none;
    border-radius: 8rpx;
    padding: 20rpx;
    font-size: 28rpx;
}

.secondary-btn {
    flex: 1;
    background: #f8f8f8;
    color: #333;
    border: 2rpx solid #ddd;
    border-radius: 8rpx;
    padding: 20rpx;
    font-size: 28rpx;
}
