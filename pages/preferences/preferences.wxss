.container {
    padding: 40rpx;
}

.header {
    text-align: center;
    margin-bottom: 60rpx;
}

.title {
    font-size: 48rpx;
    font-weight: bold;
}

.section {
    margin-bottom: 60rpx;
    background: #fff;
    padding: 30rpx;
    border-radius: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
    color: #333;
}

.basic-settings {
    background: #f8f9fa;
}

.appearances-setting {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
    padding: 20rpx;
    background: white;
    border-radius: 10rpx;
}

.number-input {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
}

.number-btn {
    width: 80rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #e9ecef;
    border-radius: 10rpx;
    margin: 0 20rpx;
}

.number-input input {
    width: 100rpx;
    text-align: center;
    background: white;
    padding: 10rpx;
    border-radius: 10rpx;
}

.match-settings {
    padding: 20rpx;
    background: white;
    border-radius: 10rpx;
}

.checkbox-container {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
    padding: 10rpx;
}

.checkbox-text {
    margin-left: 20rpx;
    font-size: 32rpx;
}

.pair-list {
    margin-bottom: 30rpx;
}

.pair-item {
    display: flex;
    align-items: center;
    padding: 10px;
    background-color: #f5f5f5;
    border-radius: 8px;
    margin-bottom: 10px;
}

.pair-info {
    display: flex;
    align-items: center;
    gap: 10px;
    flex: 1;
}

.player-info {
    display: flex;
    align-items: center;
    gap: 5px;
}

.pair-symbol {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;  
    font-size: 18px;  
    text-align: center;
}

.avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #f0f0f0;
}

.avatar-small {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background: #f0f0f0;
    margin-right: 10rpx;
}

.delete-btn {
    padding: 4px 8px;
    background-color: #ff4d4f;
    color: white;
    border-radius: 4px;
    font-size: 14px;
}

.add-pair {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
    background: white;
    padding: 20rpx;
    border-radius: 10rpx;
}

.picker {
    padding: 20rpx;
    background: #f5f5f5;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
}

.add-btn {
    background: #1890ff;
    color: white;
    margin-top: 20rpx;
}

.buttons {
    display: flex;
    gap: 30rpx;
    margin-top: 60rpx;
}

.primary-btn {
    flex: 1;
    background: #52c41a;
    color: white;
}

.cancel-btn {
    flex: 1;
    background: #f5f5f5;
    color: #666;
}
